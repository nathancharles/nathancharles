%head
  %meta{:charset => "utf-8"}
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}

  %title= current_page.data.title
  %meta{:name => "description", :content => current_page.data.description}
  %link{:rel => "canonical", :href => current_page.data.canonical}

  = stylesheet_link_tag "all", "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css"
  = javascript_include_tag  "all"

%body{:class => page_classes}
  %header.header
    .container
      %span.site-title.col-sm-6
        %a{:href => '/'}
          = succeed Haml::Engine.new('%strong cook').render do
            = succeed Haml::Engine.new('charles').render do
              %strong nathan
      = partial '/partials/navigation'

  .content.container
    = yield

  %aside.container
    - data.projects.each do |project|
      .project.col-xs-4.col-sm-3
        %a{:href => "/" + sluggify(project.shortName)}
          = image_tag "/assets/images/"+project.images[0]
          %span
            = project.shortName

  %footer.footer
    .container
      %span.copyright.col-sm-6
        Copyright &copy;
        = Time.now.year
        Nathan Charles Cook
      = partial '/partials/navigation'
